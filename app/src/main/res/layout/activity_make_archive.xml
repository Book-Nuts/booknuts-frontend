<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PostDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:translationX="23dp"
            android:layout_marginTop="6dp"
            app:srcCompat="@drawable/icon_close" />

        <TextView
            android:id="@+id/textView50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:lineHeight="29dp"
            android:paddingVertical="11dp"
            android:text="아카이브 만들기"
            android:textColor="#191919"
            android:textSize="20dp"
            android:textStyle="bold"
            android:translationX="-11dp"
            />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#191919">

    </View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18dp"
            android:lineHeight="25dp"
            android:textColor="#191919"
            android:text="이름" />

        <EditText
            android:id="@+id/edit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_make_series_input"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="11dp"
            android:paddingTop="8dp"
            android:paddingBottom="10dp"
            android:paddingLeft="14dp"
            android:hint="아카이브 이름" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/grey_200"
            android:lineHeight="17dp"
            android:text="최대 40까지 입력할 수 있습니다. " />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp"
        android:layout_weight="1"
        android:layout_marginTop="27dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18dp"
            android:lineHeight="25dp"
            android:textColor="#191919"
            android:text="설명" />

        <EditText
            android:id="@+id/edit_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:background="@drawable/bg_make_series_input_b"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="11dp"
            android:paddingTop="8dp"
            android:paddingBottom="10dp"
            android:paddingLeft="14dp"
            android:hint="아카이브 설명" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/grey_200"
            android:lineHeight="17dp"
            android:text="최대 100자까지 입력할 수 있습니다." />
    </LinearLayout>

    <TextView
        android:id="@+id/text_go_next"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#3A3A3A"
        android:lineHeight="23dp"
        android:paddingBottom="15dp"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:text="만들기"/>
</LinearLayout>