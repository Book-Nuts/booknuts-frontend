<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MyFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="14dp"
            android:text="My 프로필"
            android:textColor="@color/grey_900"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_alarm_b"
            android:translationX="-42dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/my_img_bg"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:src="@drawable/img_my_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationY="-45dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/my_img_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:src="@drawable/img_user1_b" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                ></View>

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="26dp"
                android:src="@drawable/icon_setting_b" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/my_text_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/grey_900"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="wonyzzang" />

            <TextView
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/frame_my_btn"
                android:gravity="center"
                android:textSize="14dp"
                android:textStyle="bold"
                android:text="프로필 수정" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="19dp"
            android:paddingTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="17dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/grey_900"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:text="팔로워" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/grey_900"
                    android:textSize="14dp"
                    android:text="171" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/grey_900"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:text="팔로잉" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/grey_900"
                    android:textSize="14dp"
                    android:text="84" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationY="-13dp"
        android:layout_marginHorizontal="23dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/my_linear_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_text_post"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="9dp"
                android:layout_weight="1"
                android:text="포스트 13"
                android:textColor="@color/grey_900"
                android:textSize="16dp"
                android:textStyle="bold" />

            <View
                android:id="@+id/my_view_post"
                android:layout_width="46dp"
                android:layout_height="3dp"
                android:background="@color/grey_900"
                android:visibility="visible" />
        </LinearLayout>

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/my_linear_series"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_text_series"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시리즈 1"
                android:textColor="@color/grey_900"
                android:textSize="16dp"
                android:layout_marginBottom="9dp"/>

            <View
                android:id="@+id/my_view_series"
                android:layout_width="46dp"
                android:layout_height="3dp"
                android:background="@color/grey_900"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:id="@+id/view7"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/my_linear_archive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_text_archive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아카이브 3"
                android:textColor="@color/grey_900"
                android:textSize="16dp"
                android:layout_marginBottom="9dp"/>

            <View
                android:id="@+id/my_view_archive"
                android:layout_width="60dp"
                android:layout_height="3dp"
                android:background="@color/grey_900"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:translationY="-13dp"
        android:layout_height="0.5dp"
        android:background="@color/grey_900"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationY="-13dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="22dp"
            android:layout_marginVertical="13dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@drawable/input_my_search"
            android:textColor="#C4C4C4"
            android:textSize="14dp"
            android:paddingLeft="17dp"
            android:hint="검색창" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="32dp"
            android:src="@drawable/icon_dots_b" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#E5E5E5"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:translationY="-13dp"/>

</LinearLayout>