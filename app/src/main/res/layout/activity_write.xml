<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PostDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_close"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:translationX="23dp"
            android:layout_marginTop="6dp"
            app:srcCompat="@drawable/icon_close" />

        <TextView
            android:id="@+id/textView50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:lineHeight="29dp"
            android:paddingVertical="11dp"
            android:text="게시글 작성"
            android:textColor="#191919"
            android:textSize="20dp"
            android:textStyle="bold"
            android:translationX="-11dp" />

        <ImageView
            android:id="@+id/img_posting"
            android:layout_width="23dp"
            android:layout_height="wrap_content"
            android:translationX="-38dp"
            app:srcCompat="@drawable/icon_posting" />
    </LinearLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="@color/grey_200" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginHorizontal="19.5dp"
                android:layout_marginBottom="17dp"
                android:layout_marginTop="5dp"
                android:paddingHorizontal="20.5dp"
                android:inputType="textPersonName"
                android:textSize="22dp"
                android:lineHeight="32dp"
                android:textColorHint="@color/grey_200"
                android:backgroundTint="@color/grey_200"
                android:hint="제목" />

            <LinearLayout
                android:id="@+id/linear_add_book"
                android:layout_width="160dp"
                android:layout_height="226dp"
                android:layout_marginBottom="17dp"
                android:background="#e6e6e6"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_book"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    app:srcCompat="@drawable/img_book_sample1" />

                <ImageView
                    android:id="@+id/img_plus"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/icon_add" />

                <TextView
                    android:id="@+id/text_add_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineHeight="23.17dp"
                    android:text="책 추가하기"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18dp"
                android:lineHeight="25dp"
                android:textColor="#191919"
                android:paddingHorizontal="20dp"
                android:text="장르 선택" />

            <Spinner
                android:id="@+id/spinner_genre"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/bg_spinner_genre"
                android:theme="@style/SpinnerTheme"
                android:paddingHorizontal="12dp"
                />

            <EditText
                android:id="@+id/edit_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:ems="10"
                android:padding="21dp"
                android:gravity="start"
                android:inputType="textPersonName"
                android:background="@drawable/bg_textview_rect"
                android:hint="내용을 입력하세요"  />
        </LinearLayout>
    </ScrollView>
</LinearLayout>