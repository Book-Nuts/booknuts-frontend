<resources>

    <style name="Widget.BookNuts.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.BookNuts.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="SpinnerDivideStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">@color/grey_200</item> <!-- divider 색 -->
        <item name="android:dividerHeight">0.5dp</item> <!-- divider 높이 -->
    </style>

    <style name="SpinnerTheme" parent="android:Widget">
        <item name="android:dropDownListViewStyle">@style/SpinnerDivideStyle</item>
    </style>

    <style name="Theme.AppCompat.Transparent.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <!-- 투명정도를 나타내는 색-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- <item name="android:colorBackgroundCacheHint">@null</item> -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <!-- android:backgroundDimEnabled : true - 반투명 검정 / false - 완전 투명 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Theme.MyDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="profile_tab_text">
        <item name="android:textSize">16sp</item>
    </style>
</resources>