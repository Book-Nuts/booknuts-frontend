<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.co.booknuts">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_booknuts"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round_booknuts"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookNuts"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".view.activity.ChatDetailActivity"
            android:exported="true"
            android:theme="@style/Theme.MyDialog"/>
        <activity android:name=".view.activity.ArchiveAddActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.MakeArchiveActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.MakeSeriesSecondActivity"
            android:exported="true" />
        <activity
            android:name=".view.activity.MakeSeriesFirstActivity"
            android:exported="true" />
        <activity
            android:name=".view.activity.SeriesPopUpActivity"
            android:exported="true"
            android:theme="@style/Theme.MyDialog" />
        <activity
            android:name=".view.activity.ArchivePopUpActivity"
            android:exported="true"
            android:theme="@style/Theme.MyDialog" />
        <activity
            android:name=".view.activity.WriteActivity"
            android:exported="true" />
        <activity
            android:name=".view.activity.PostDetailActivity"
            android:exported="true" />
        <activity
            android:name=".view.activity.BookSearchActivity"
            android:exported="true" />
        <activity
            android:name=".view.activity.DebateChatActivity"
            android:exported="true" />
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/network_security_config" />
        <activity
            android:name=".view.activity.DebateCreateActivity"
            android:exported="true" />
        <activity
            android:name=".view.activity.MainActivity"
            android:exported="true" />
        <activity
            android:name=".view.activity.SignUpActivity"
            android:exported="true" />
        <activity
            android:name=".view.activity.IntroActivity"
            android:exported="true"
            android:theme="@style/Intro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.LoginActivity"
            android:exported="true">
        </activity>
    </application>

</manifest>